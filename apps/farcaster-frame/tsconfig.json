{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "outDir": "dist",
    "jsx": "react-jsx",
    "jsxImportSource": "frog/jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "baseUrl": ".",
    "paths": {
      "*": ["*", "api/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"]
}